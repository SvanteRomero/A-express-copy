# A-Express Django Backend Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED IN PRODUCTION
# ============================================

# Generate a secure key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=

# ============================================
# OPTIONAL (with defaults)
# ============================================

# Set to True for local development only
DEBUG=False

# Database URL (Railway sets this automatically)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=

# Frontend URL for CORS (defaults to localhost:3000)
FRONTEND_URL=http://localhost:3000

# Railway domain (set automatically by Railway)
RAILWAY_PUBLIC_DOMAIN=
